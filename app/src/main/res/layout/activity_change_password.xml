<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="removeKeyboard"
    android:id="@+id/change_password_relativelayout"
    android:background="@drawable/hoplay_bg"
    tools:context="com.hoplay.kay.hoplay.CoresAbstract.ProfileAbstracts.ChangePassword">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_update_80dp"
        android:id="@+id/lock_symbol_change_password_imageview"
        />


    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_marginTop="20dp"
        android:id="@+id/current_password_textinputlayout"
        android:layout_below="@+id/lock_symbol_change_password_imageview"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/current_password_change_password_edittext"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="@string/change_password_current_password"
            android:drawableEnd="@drawable/ic_lock_open_not_focused_32dp"
            android:drawableRight="@drawable/ic_lock_open_not_focused_32dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:inputType="textPassword"
            android:maxLength="25" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_marginTop="20dp"
        android:id="@+id/new_password_textinputlayout"
        android:layout_below="@+id/current_password_textinputlayout"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_password_change_password_edittext"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="@string/change_password_new_password"
            android:drawableEnd="@drawable/ic_lock_open_not_focused_32dp"
            android:drawableRight="@drawable/ic_lock_open_not_focused_32dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:inputType="textPassword"
            android:maxLength="25" />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_marginTop="20dp"
        android:id="@+id/confirm_new_password_textinputlayout"
        android:layout_below="@+id/new_password_textinputlayout"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/confirm_new_password_change_password_edittext"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="@string/change_password_confirm_password"
            android:drawableEnd="@drawable/ic_lock_open_not_focused_32dp"
            android:drawableRight="@drawable/ic_lock_open_not_focused_32dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:inputType="textPassword"
            android:maxLength="25" />

    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/update_password_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirm_new_password_textinputlayout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_margin"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:onClick="updatePassword"
        android:text="@string/change_password_update_password_button" />






    </RelativeLayout>
