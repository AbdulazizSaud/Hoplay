<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/no_games_added_background"
    tools:context="com.example.kay.hoplay.RequestComponents.RequestsRequires.NoGamePopUp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_error_outline_24dp"
        android:id="@+id/warning_symbol_imageview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/warning_symbol_imageview"
        android:text="@string/no_game_popup_message"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:id="@+id/popup_message_textview"
        />


    <Button
        android:text="@string/no_game_popup_add_game_button"
        android:textColor="@color/white"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_message_textview"
        android:id="@+id/add_game_button_no_game_popup"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
