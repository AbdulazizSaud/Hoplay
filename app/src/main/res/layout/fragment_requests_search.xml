<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">





    <TextView
        android:text="Search for a game"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/burgundy"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/search_game_message_textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/search_game_message_textview"
        android:id="@+id/platforms_container_linearlayout"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/platforms_images_container_linearlayout"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/ps_choice_imageview"
                android:src="@drawable/ps_logo"
                />


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/pc_logo"
                android:id="@+id/pc_choice_imageview"
                android:layout_marginLeft="20dp"
                />


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/xbox_logo"
                android:layout_marginLeft="20dp"
                android:id="@+id/xbox_choice_imageview"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_below="@+id/platforms_images_container_linearlayout"
            android:layout_alignStart="@+id/platforms_images_container_linearlayout"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS Requests"

                android:textColor="@color/invisible_request_color"
                android:id="@+id/ps_requests_message_textview" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC Requests"
                android:layout_marginLeft="20dp"
                android:textColor="@color/invisible_request_color"
                android:id="@+id/pc_requests_message_textview" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xbox Requests"
                android:layout_marginLeft="20dp"
                android:textColor="@color/invisible_request_color"
                android:id="@+id/xbox_requests_message_textview" />



        </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



    <EditText
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/games_search_edittext"
        android:hint="All games"
        android:gravity="center"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/rectangular_edittext"
        android:layout_below="@+id/platforms_container_linearlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/games_search_edittext"
        android:layout_centerHorizontal="true"
        android:id="@+id/region_search_spinner"
        android:background="@drawable/rectangualr_white_shape"
        />

    <Spinner
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:id="@+id/number_of_players_search_spinner"
        android:background="@drawable/rectangualr_white_shape"
        android:layout_below="@+id/region_search_spinner"
        android:layout_alignStart="@+id/region_search_spinner" />

    <Spinner
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/number_of_players_search_spinner"
        android:layout_alignStart="@+id/number_of_players_search_spinner"
        android:id="@+id/players_rank_search_spinner"
        android:background="@drawable/rectangualr_white_shape"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_down_grey_18dp"
        android:id="@+id/down_arrow_region_search_imageview"
        android:layout_alignTop="@+id/region_search_spinner"
        android:layout_alignEnd="@+id/region_search_spinner"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_down_grey_18dp"
        android:id="@+id/down_arrow_number_of_players_search_imageview"
        android:layout_alignTop="@+id/number_of_players_search_spinner"
        android:layout_alignEnd="@+id/region_search_spinner"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_down_grey_18dp"
        android:id="@+id/down_arrow_players_rank_search_imageview"
        android:layout_alignTop="@+id/players_rank_search_spinner"
        android:layout_alignEnd="@+id/region_search_spinner"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="12dp" />


    <Button
        android:text="Search"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/less_rounded_button"
        android:textColor="@color/white"
        android:id="@+id/make_request_button"
        android:layout_below="@+id/players_rank_search_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />



</RelativeLayout>