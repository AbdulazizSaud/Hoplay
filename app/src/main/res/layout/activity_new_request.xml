<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E0E0E0">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_make_request_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="#E0E0E0"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.kay.hoplay.Fragments.MakeRequestFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make new Request :)"
            android:id="@+id/make_request_message_textview"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/make_request_message_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/consoles_radiogroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="20dp"
                android:id="@+id/pc_choice_radiobutton"
                android:text="PC"
                android:layout_marginRight="20dp"

                android:textColor="#E08A18"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/ps_choice_radiobutton"
                android:text="Playstation"

                android:textSize="20dp"
                android:textColor="#256EB8"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/xbox_choice_radiobutton"
                android:textSize="20dp"
                android:textColor="#107C0F"
                android:text="Xbox"

                android:layout_marginLeft="20dp"
                />

        </RadioGroup>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/consoles_radiogroup"
            android:layout_centerHorizontal="true"
            android:id="@+id/games_edittext"
            android:hint="What do you want to play ?"
            android:textColorHint="@color/hintColor"
            android:gravity="center"
            android:textSize="16dp"
            android:background="@drawable/rectangular_edittext"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_white_18dp"
            android:id="@+id/down_arrow_games_imageview"
            android:layout_below="@+id/consoles_radiogroup"
            android:layout_alignEnd="@+id/games_edittext" />


        <Spinner
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/games_edittext"
            android:layout_centerHorizontal="true"
            android:id="@+id/region_spinner"
            android:background="@drawable/rectangualr_white_shape"

            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_arrow_down_grey_18dp"
            android:id="@+id/down_arrow_region_imageview"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/region_spinner"
            android:layout_alignEnd="@+id/make_request_message_textview" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/number_of_players_spinner"
            android:background="@drawable/rectangualr_white_shape"
            android:layout_alignEnd="@+id/region_spinner"
            android:layout_below="@+id/region_spinner"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_arrow_down_grey_18dp"
            android:id="@+id/down_arrow_number_of_players_imageview"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/number_of_players_spinner"
            android:layout_alignStart="@+id/down_arrow_region_imageview" />


        <Spinner
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/number_of_players_spinner"
            android:layout_alignStart="@+id/region_spinner"
            android:id="@+id/players_rank_spinner"
            android:background="@drawable/rectangualr_white_shape"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_arrow_down_grey_18dp"
            android:id="@+id/down_arrow_ranks_imageview"
            android:layout_alignTop="@+id/players_rank_spinner"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/down_arrow_number_of_players_imageview" />



        <EditText
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:text=""
            android:background="@drawable/rectangular_edittext"
            android:ems="10"
            android:textColorHint="@color/hintColor"
            android:hint="You description here -_-"
            android:gravity="center"
            android:layout_below="@id/players_rank_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:id="@+id/request_descritption_edittext" />


        <Button
            android:text="Request"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/less_rounded_button"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:id="@+id/make_request_button"
            android:layout_below="@id/request_descritption_edittext"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/players_rank_spinner" />

        <Button
            android:text="Save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/less_rounded_button"
            android:textColor="@color/white"
            android:id="@+id/generate_request_button"
            android:layout_alignTop="@+id/make_request_button"
            android:layout_alignEnd="@+id/players_rank_spinner"
            android:layout_marginTop="11dp" />


    </RelativeLayout>



</ScrollView>
