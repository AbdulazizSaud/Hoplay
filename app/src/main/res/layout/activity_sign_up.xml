<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kay.hoplay.Activities.SignUpActivity"
    android:background="#E0E0E0"
    android:clickable="true"
    android:id="@+id/sign_up_relativeLayout"
    android:onClick="removeKeyboard"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/go_back_to_main_imageview"
        android:src="@drawable/greyx"
        android:layout_marginRight="20dp"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:onClick="toMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C R E A T E   N E W  "
        android:id="@+id/create_new_textview"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginRight="65dp"
        android:textColor="@color/burgundy"
        android:layout_below="@+id/go_back_to_main_imageview"
        android:layout_centerHorizontal="true"
        android:onClick="removeKeyboard"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="A C C O U N T "
        android:textSize="25dp"
        android:layout_marginRight="90dp"
        android:id="@+id/account_textview"
        android:textColor="@color/burgundy"
        android:layout_below="@+id/create_new_textview"
        android:layout_centerHorizontal="true"
        android:onClick="removeKeyboard"/>

    <EditText
        android:layout_width="320dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/rectangular_edittext"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/nickname_sign_up_edittext"
        android:shadowColor="@color/burgundy"
        android:layout_below="@+id/account_textview"
        android:layout_centerHorizontal="true"
        android:hint="Nickname"
        android:textColorHint="@color/hintColor"
        android:inputType="textPersonName"
        android:focusable="true"

        />

    

    <EditText
        android:layout_width="320dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/rectangular_edittext"
        android:layout_height="50dp"
        android:id="@+id/username_sign_up_edittext"
        android:shadowColor="@color/burgundy"
        android:layout_below="@+id/nickname_sign_up_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:textColorHint="@color/hintColor"

        />
    <EditText
        android:layout_width="320dp"
        android:gravity="center"
        android:background="@drawable/rectangular_edittext"
        android:layout_height="50dp"
        android:id="@+id/email_sign_up_edittext"
        android:shadowColor="@color/burgundy"
        android:layout_below="@+id/username_sign_up_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Email Address"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:inputType="textEmailAddress"/>









    <EditText
        android:layout_width="320dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/rectangular_edittext"
        android:layout_height="50dp"
        android:textColorHint="@color/hintColor"
        android:id="@+id/password_sign_up_edittext"
        android:shadowColor="@color/burgundy"
        android:hint="Password"
        android:layout_below="@id/email_sign_up_edittext"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/email_sign_up_edittext" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/confirm_password_edittext"
        android:hint="Confirm Password"
        android:textColorHint="@color/hintColor"
        android:layout_below="@id/password_sign_up_edittext"
        android:background="@drawable/rectangular_edittext"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:inputType="textPassword" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#726D6D"
        android:text="By tapping &quot;Sign Up&quot; you agree to the"
        android:id="@+id/agreement_textview"
        android:layout_below="@id/confirm_password_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="terms and conditions "
        android:id="@+id/terms_and_conditions_textview"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        android:textColor="#ff0000"
        android:onClick="toTermsAndConditions"
        android:layout_below="@+id/agreement_textview"
        android:layout_alignStart="@+id/account_textview"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:text="S I G N  U P"
        android:id="@+id/sign_in_button"
        android:textColor="#f8f6f6"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:onClick="signUp"
        android:layout_below="@+id/terms_and_conditions_textview"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
