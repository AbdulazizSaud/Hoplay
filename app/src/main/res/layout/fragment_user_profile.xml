
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CoresAbstract.ProfileAbstracts.UserProfile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CoresAbstract.ProfileAbstracts.UserProfile"
        android:background="@color/app_background"
       >

        <!-- TODO: Update blank fragment layout -->



        <TextView
            android:id="@+id/recent_activities_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_games_friends_ratings_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/user_fragment_recent_activities"
            android:textColor="@color/app_color"
            android:textSize="26sp" />


        <include
            android:id="@+id/user_games_friends_ratings_bar"
            layout="@layout/user_profile_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />


        <ImageView
            android:id="@+id/no_activity_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            app:srcCompat="@drawable/ic_videogame_asset_64dp"
            android:layout_below="@+id/recent_activities_textview"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/no_activity_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/no_activity_imageview"
            android:gravity="center"
            android:text="@string/user_fragment_no_activity_textview"
            android:textSize="26sp" />


        <Button
            android:id="@+id/add_activity_user_fragment_button"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_add_circle_outline_white_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_add_circle_outline_white_24dp"
            android:onClick="toFindFriendsCore"
            android:text="@string/user_fragment_create_request_button"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_below="@+id/no_activity_textview"
            android:layout_centerHorizontal="true" />




        <!-- this line control the photo bordor color :
           app:civ_border_color="@color/dark" />  -->


    </RelativeLayout>


    <include layout="@layout/recent_activites_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include"
   />
</LinearLayout>

