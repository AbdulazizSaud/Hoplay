<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/pop_up_backgrounds"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/view_player_profile_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:paddingRight="36dp"
        android:drawableLeft="@drawable/ic_face_24dp"
        android:drawableStart="@drawable/ic_face_24dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:text="@string/players_dialog_view_profile" />

    <Button
        android:id="@+id/remove_player_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:paddingRight="36dp"
        android:drawableLeft="@drawable/ic_remove_circle_outline_24dp"
        android:drawableStart="@drawable/ic_remove_circle_outline_24dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_below="@+id/view_player_profile_button"
        android:text="@string/players_dialog_remove" />


</RelativeLayout>