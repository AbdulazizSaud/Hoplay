<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activity_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context="com.example.kay.hoplay.Activities.ForgetPasswordActivity.ForgetPasswordActivity">


        <TextView
            android:text="Find your Hoplay account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/text_color"
            android:textSize="25dp"
            android:id="@+id/find_username_textview"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:id="@+id/input_layout_forget_password"
            android:layout_below="@+id/find_username_textview">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/text_color"
                android:layout_below="@+id/find_username_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="52dp"
                android:hint="Email Address"
                android:paddingLeft="10dp"
                android:digits="qwertyuiopasdfghjklzxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ01234567890-@_."
                android:gravity="left"
                android:textColorHint="@color/hint_color"
                android:id="@+id/find_username_edittext" />


        </android.support.design.widget.TextInputLayout>

        <Button
            android:text="S e a r c h"
            android:textStyle="normal"
            android:onClick="forgetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/input_layout_forget_password"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/search_account_button" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

