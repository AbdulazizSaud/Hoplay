<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/pop_up_backgrounds"
    android:layout_height="wrap_content">


    <Button
        android:id="@+id/request_saved_request_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:drawableLeft="@drawable/ic_upload_24dp"
        android:drawableStart="@drawable/ic_upload_24dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:paddingRight="36dp"
        android:paddingEnd="36dp"
        android:text="@string/saved_request_on_click_request_button" />


    <Button
        android:id="@+id/update_saved_request_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_below="@+id/request_saved_request_button"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_update_24dp"
        android:drawableStart="@drawable/ic_update_24dp"
        android:paddingRight="40dp"
        android:text="@string/saved_request_on_click_update_button" />
    <Button
        android:id="@+id/delete_saved_request_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:paddingRight="36dp"
        android:drawableLeft="@drawable/ic_delete_24dp"
        android:drawableStart="@drawable/ic_delete_24dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:paddingEnd="36dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/update_saved_request_button"
        android:text="@string/saved_request_on_click_delete_button" />


</RelativeLayout>