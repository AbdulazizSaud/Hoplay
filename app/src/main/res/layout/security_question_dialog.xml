<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/pop_up_backgrounds"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/ic_security_64dp"
        android:id="@+id/security_dialog_imageview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/security_dialog_message"
        android:textSize="20sp"
        android:id="@+id/security_question_textview"
        android:layout_below="@+id/security_dialog_imageview"
        android:gravity="center"
        android:padding="20dp"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/security_question_textview"
        android:layout_centerHorizontal="true"
        android:id="@+id/security_question_inputlayout"

        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/security_question_edittext"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_games_unfocused_24dp"
            android:drawableRight="@drawable/ic_games_unfocused_24dp"
            android:ems="3"
            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890-_"
            android:textColorHint="@color/hint_color"
            android:hint="@string/security_dialog_edittext_hint"
            android:textColor="@color/text_color"
            android:inputType="textEmailAddress"
            android:maxLength="100" />

    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/done_security_dialog_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:text="@string/survey_dialog_done"
        android:layout_below="@+id/security_question_inputlayout"
        android:layout_centerHorizontal="true" />





</RelativeLayout>