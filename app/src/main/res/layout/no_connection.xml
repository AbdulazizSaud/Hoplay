<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:id="@+id/no_connection_relativelayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your connection -_-"
        android:textColor="@color/darkenGrey"
        android:layout_marginTop="38dp"
        android:id="@+id/connection_error_textview"
        android:textSize="20dp"
        android:typeface="monospace"
        android:layout_below="@+id/connection_error_imageview"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/connection_error_imageview"
        android:src="@drawable/noconnectionpixels"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp" />

</RelativeLayout>