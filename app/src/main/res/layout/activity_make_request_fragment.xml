<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_make_request_fragment_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:windowSoftInputMode="adjustPan"
        tools:context=".RequestComponents.MakeRequestFragment">


        <Button
            android:text="@string/make_request_fragment_new_request"
            android:textColor="@color/white"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/new_request_button"
            android:layout_alignParentTop="true"
            android:onClick="toNewRequest"
            android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="#bdbdbd"
        android:id="@+id/line_divider_linearlayout"
        android:layout_below="@+id/new_request_button"
        android:orientation="horizontal">

    </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/line_divider_linearlayout"
            android:text="@string/make_request_fragment_saved_request"
            android:textSize="23dp"
            android:textColor="@color/app_color"
            android:id="@+id/saved_activity_message_textview"
            android:layout_marginTop="10dp"
            />

        <include layout="@layout/saved_requests_in_make_requests_fragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/saved_activity_message_textview"
            android:layout_marginTop="10dp"
            android:id="@+id/saved_request_layout">
        </include>



    </RelativeLayout>






