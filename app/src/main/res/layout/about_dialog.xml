<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_backgrounds"
    android:paddingBottom="20dp"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_perm_device_information_64dp"
        android:id="@+id/security_imageview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@id/security_imageview"
        android:text="@string/about_dialog_app_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/app_name_about_dialog"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_below="@id/app_name_about_dialog"
        android:text="Version 3.0.2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/app_version_about_dialog"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_below="@id/app_version_about_dialog"
        android:text="@string/about_dialog_copyright_info"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/app_copyright_about_dialog"
        />




    <Button
        android:text="@string/about_dialog_ok"
        android:textColor="@color/white"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/ok_button_about_dialog"
        android:layout_below="@+id/app_copyright_about_dialog"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
