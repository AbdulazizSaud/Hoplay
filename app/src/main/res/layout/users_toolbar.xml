<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="removeKeyboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">





    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/app_color"
        android:layout_alignParentTop="true"
        android:id="@+id/users_toolbar"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/close_chat_imageview"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_arrow_back_24dp"
            android:layout_toLeftOf="@+id/user_in_toolbar_imageview"
            android:contentDescription="" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/profile_default_photo"
                app:civ_border_width="1dp"
                app:civ_border_overlay="true"
                android:id="@+id/user_in_toolbar_imageview"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:textColor="@color/white"
                android:text="@string/users_toolbar_title"
                android:textSize="20dp"
                android:id="@+id/title_users_toolbar"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/user_in_toolbar_imageview"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/users_toolbar_subtitle"
                android:textSize="12dp"
                android:gravity="left"
                android:id="@+id/subtitle_users_toolbar"
                android:layout_below="@+id/title_users_toolbar"
                android:layout_alignLeft="@+id/title_users_toolbar"
                android:layout_alignStart="@+id/title_users_toolbar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />





            <!-- NOTICE : ALL THESE CODES SHOULD BE BEFORE THE '>' CLOSE BREACKET !! VERY IMPORTANT -->
            <!--THIS IS HOW YOU SPECIFY THE COLOR OF THE TITLE USING A SEPERATE THEME FOR THE TITLE BAR !! -->
            <!--WATCH SLIDENERD TUTORIAL 4 YOUTUBE-->
            <!--app:theme="@style/AlertDialog.AppCompat.Light" -->

            <!--ALSO YOU CAN CHANGE THE POPUP THEME FOR THE TOOLBAR SETTINGS IN THE RIGHT CORNER :-->
            <!--app:popupTheme="@style/AlertDialog.AppCompat.Light"-->



        </RelativeLayout>






    </android.support.v7.widget.Toolbar>

