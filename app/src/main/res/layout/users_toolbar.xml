<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_relativeLayout"
    android:onClick="removeKeyboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#880E4F"
        android:layout_alignParentTop="true"
        android:id="@+id/users_toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:onClick="toCommunityFragment"
            android:src="@drawable/ic_keyboard_backspace_white_24dp"
            android:layout_toLeftOf="@+id/user_in_toolbar_imageview"/>





        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test_user"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/user_in_toolbar_imageview"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="26dp"
            android:textColor="#FFFFFF"
            android:text="Bakatsuki"
            android:textSize="20dp"
            android:id="@+id/user_name_in_toolbar_textview"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_in_toolbar_imageview"
            />






        <!-- NOTICE : ALL THESE CODES SHOULD BE BEFORE THE '>' CLOSE BREACKET !! VERY IMPORTANT -->
        <!--THIS IS HOW YOU SPECIFY THE COLOR OF THE TITLE USING A SEPERATE THEME FOR THE TITLE BAR !! -->
        <!--WATCH SLIDENERD TUTORIAL 4 YOUTUBE-->
