<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_backgrounds"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/ic_sentiment_neutral_64dp"
        android:id="@+id/game_not_added_face_imageview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/game_not_added_do_mean"
        android:textSize="24sp"
        android:id="@+id/game_not_added_title"
        android:layout_below="@+id/game_not_added_face_imageview"
        android:gravity="center"
        android:padding="10dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/game_photo_game_not_added_circleimageview"
        android:src="@drawable/hoplaylogo"
        app:border="true"
        app:border_color="@color/app_color"
        app:border_width="4dp"
        app:shadow="false"
        android:layout_below="@+id/game_not_added_title"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/game_not_added_game_name"
        android:textSize="22sp"
        android:id="@+id/game_name_game_not_added_textview"
        android:layout_below="@+id/game_photo_game_not_added_circleimageview"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/game_not_added_message"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/game_not_added_message_textview"
        android:layout_below="@+id/game_name_game_not_added_textview"
        android:gravity="center"
       android:padding="10dp"/>



    <Button
        android:id="@+id/yes_add_game_game_not_added_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:text="@string/game_not_added_yes"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/game_not_added_message_textview"
        android:layout_alignLeft="@+id/game_not_added_message_textview"
        android:layout_alignStart="@+id/game_not_added_message_textview" />

    <Button
        android:id="@+id/no_add_game_game_not_added_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:text="@string/game_not_added_no"
        android:layout_alignBaseline="@+id/yes_add_game_game_not_added_button"
        android:layout_alignBottom="@+id/yes_add_game_game_not_added_button"
        android:layout_alignRight="@+id/game_not_added_message_textview"
        android:layout_alignEnd="@+id/game_not_added_message_textview"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />




</RelativeLayout>