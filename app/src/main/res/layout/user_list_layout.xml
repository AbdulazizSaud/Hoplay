<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:focusable="true"
    tools:context=".Cores.UserProfileCores.ParentCore.UserListCore">






        <EditText
            android:id="@+id/search_new_friend_bar_edittext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:maxLines="1"
            android:maxLength="27"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/text_color"
            android:background="@drawable/white_card_background"
            android:drawableRight="@drawable/ic_search_unfocused_32dp"
            android:drawableEnd="@drawable/ic_search_unfocused_32dp"
            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890-_."
            android:hint="@string/search_user_message"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_new_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/search_new_friend_bar_edittext"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/load_users_progressbar_user_list"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_new_friend_bar_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_group_64dp"
        android:id="@+id/no_friends_imageview"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/load_users_progressbar_user_list"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:gravity="center"
        android:id="@+id/no_friends_textview"
        android:text="@string/user_list_layout_no_fiends_message"
        android:textSize="30sp"
        android:layout_below="@+id/no_friends_imageview"
        android:layout_centerHorizontal="true" />



    <Button
        android:text="@string/user_list_layout_add_friend_button"
        android:textStyle="normal"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:onClick="toFindFriendsCore"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/no_friends_textview"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_person_add_24dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/add_friends_button" />



</RelativeLayout>
